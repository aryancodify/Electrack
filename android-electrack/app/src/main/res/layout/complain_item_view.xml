<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:clickable="true"
    android:background="@drawable/button_ripple_color_white"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:text="Short circuit at home last night. Need a visit on urgent."
            android:textColor="@color/primary_text"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_margin="4dp"
            android:maxLines="1"
            android:text="25 April, 2016 at 6:25 AM"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:maxLines="1"
            android:layout_below="@id/date_time"
            android:text="Lajpat Nager, Delhi"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location"
            android:layout_margin="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Short circuit at home last night. Need a visit on urgent. for this klasndlna asndlkasd asndlkjsd sndlkjsad asnmdlksjdka dnslkndnd sndlksndl ndjksndbskb hsacasc caksbckbakbckabsjcbjsbcj"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/body"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:text="Status:"
            android:textColor="@color/primary_text"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/body"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/status_text"
            android:text="Pending"
            android:textColor="@color/green_dark"
            android:textSize="18sp"/>


        <Button
            android:id="@+id/btnAssign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/body"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_ripple_color_theme_accent"
            android:text="Assign"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
