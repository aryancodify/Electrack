<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="12dp"
                    android:text="Service Requests"
                    android:textColor="@color/primary"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header"
                    android:layout_margin="4dp"
                    android:text="Short circuit at home last night. Need a visit on urgent."
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_margin="4dp"
                    android:maxLines="1"
                    android:text="25 April, 2016 at 6:25 AM"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/title"
                    android:layout_margin="4dp"
                    android:maxLines="1"
                    android:text="Lajpat Nager, Delhi"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_time"
                    android:layout_margin="4dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="Short circuit at home last night. Need a visit on urgent. for this klasndlna asndlkasd asndlkjsd sndlkjsad asnmdlksjdka dnslkndnd sndlksndl ndjksndbskb hsacasc caksbckbakbckabsjcbjsbcj"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/body"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="12dp"
                    android:text="Status:"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/body"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/status_text"
                    android:text="Pending"
                    android:textColor="@color/green_dark"
                    android:textSize="18sp"/>


                <Button
                    android:id="@+id/btnAssign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/body"
                    android:background="@drawable/button_ripple_color_theme_accent"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="Assign"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:id="@+id/all_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/status_text"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ripple_button_greyish_color">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:text="All Request.."
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"/>

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/header_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="12dp"
                    android:text="Complaints"
                    android:textColor="@color/primary"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/title_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_c"
                    android:layout_margin="4dp"
                    android:text="No Electricity from yesterday."
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/date_time_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_c"
                    android:layout_margin="4dp"
                    android:maxLines="1"
                    android:text="23 April, 2016 at 6:25 AM"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/location_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/title_c"
                    android:layout_margin="4dp"
                    android:maxLines="1"
                    android:text="Civil Lines, New Delhi"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/body_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_time_c"
                    android:layout_margin="4dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="Short circuit at home last night. Need a visit on urgent. for this klasndlna asndlkasd asndlkjsd sndlkjsad asnmdlksjdka dnslkndnd sndlksndl ndjksndbskb hsacasc caksbckbakbckabsjcbjsbcj"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/status_text_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/body_c"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="12dp"
                    android:text="Status:"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/status_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/body_c"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/status_text_c"
                    android:text="Assigned"
                    android:textColor="@color/green_dark"
                    android:textSize="18sp"/>


                <Button
                    android:id="@+id/btnAssign_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/body_c"
                    android:background="@drawable/button_ripple_color_theme_accent"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="Check Progress"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:id="@+id/all_request_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/status_text_c"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ripple_button_greyish_color">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:text="All Complaints.."
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"/>

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/header_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="12dp"
                    android:text="Consumption"
                    android:textColor="@color/primary"
                    android:textSize="24sp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>